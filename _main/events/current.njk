---
layout: default
--- 

<div class="container pt-2">
    <ul class="list-group list-group-flush">
        {%- for event in currentEvents -%}
        {% if event.title %}
        <li class="list-group-item">
            <h4 class="text-{{event.style}}">{{event.title}}</h4>
            <h6 class="event-date">{{event.date}}{% if event.language %}, {{event.language}}{% endif %}</h6>
            <p class="text-bold">{% if event.presenters.length > 0 %}{{ event.presenters | join(", ") }}{% endif %}</p>
            <p class="text-bold">
            {%- for link in event.links -%}
                <a href="{{link.url}}" class="link-{{event.style}} me-2">{{link.text}}</a>
            {%- endfor -%}
            </p>
            {%- if event.registration -%}
            <a class="btn btn-{{event.style}}" href="{{event.registration}}" target="_blank" role="button">RegistrÃ¡cia</a>
            {% endif %}
        </li>
        {% endif %}
        {%- endfor -%}
    </ul>
    </div>
</div>